    cd_battlecry5         = RESOLVE_STR_REF(@20) //  h_ (unofficial)
    cd_bored1             = RESOLVE_STR_REF(@21) //  d
    cd_bored2             = RESOLVE_STR_REF(@22) //  i_ (unofficial)
    cd_breaking_pt        = RESOLVE_STR_REF(@23) //  j_ (unofficial)
